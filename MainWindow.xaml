<Window x:Class="ExcelExport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelExport"
        mc:Ignorable="d"
        Title="ExcelExport" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Command="{Binding OpenFiles}" />
            </MenuItem>
        </Menu>
        <Button Content="Open files" FontSize="20" Background="White" Command="{Binding OpenFiles}" />
    </DockPanel>
</Window>
