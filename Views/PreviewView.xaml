<views:MvxWpfView
	         xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
             x:Class="ExcelExport.Views.PreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelExport.Views"
    xmlns:customcomponents="clr-namespace:ExcelExport.Views.CustomComponents"
    mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <views:MvxWpfView.Resources>
        <ImageSourceConverter x:Key="ImageSourceConverter" />
    </views:MvxWpfView.Resources>
    <customcomponents:Shared>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{Binding CurrentPreviewName}"  />
            <Image Grid.Row="1" Source="{Binding CurrentPreview}" />
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding Previous}" Content="Previous" Height="30px" MinWidth="100px" Margin="0,0,10,0" />
                <Button Command="{Binding Next}" Content="Next" Height="30px" MinWidth="100px" />
            </StackPanel>
        </Grid>
    </customcomponents:Shared>
</views:MvxWpfView>
